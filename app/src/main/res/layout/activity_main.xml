<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#00D8D8"
    android:orientation="vertical"
    tools:context="com.tests.user.healthcheck.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <android.support.v7.widget.CardView
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="240dp"
            android:layout_margin="4dp"
            app:cardCornerRadius="20dp"
            app:cardBackgroundColor="#fd272f">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="center">

                <ImageView
                    android:layout_width="200dp"
                    android:layout_height="200dp"
                    android:layout_gravity="center_horizontal"
                    android:src="@drawable/bmi"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="تست شاخص توده بدنی"
                    android:layout_gravity="center"
                    android:textSize="20sp"
                    android:textColor="#000"/>

            </LinearLayout>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="0dp"
            android:layout_height="240dp"
            android:layout_weight="1"
            app:cardBackgroundColor="#FFF68F"
            android:layout_margin="4dp"
            app:cardCornerRadius="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="6dp"
                android:text="با انجام تست های این برنامه از سلامت خود باخبر شوید."
                android:layout_gravity="center"
                android:textAlignment="center"
                android:textSize="20sp"
                android:textColor="#000"/>

        </android.support.v7.widget.CardView>

    </LinearLayout>

</LinearLayout>
